<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brotherapp.preachingpartner">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopicDetails"
            android:label="@string/title_activity_topic_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TopicItemDetails"
            android:label="@string/title_activity_topic_item_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddTopicItem"
            android:label="@string/title_activity_add_topic_item"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>